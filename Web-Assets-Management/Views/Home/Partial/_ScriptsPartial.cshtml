<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "100%";
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }

    /* Show Password */
    function myFunction() {
        var x = document.getElementById("myInput");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }

    /* Login ID Area */

    function eventIsNumber(event) {
        event = event || window.event;
        var key = event.keyCode || event.which;
        if (key < 48 || key > 57) {
            return false;
        }
        return true;
    }

    /* Window Alert For LogOut */

    function LogOutAlert() {
        let text = "Do you want to logout?";
        if (confirm(text) == true) {
            fetch('/Home/LogOut', {
            })
                .then(function (response) {
                    if (response.redirected) {
                        window.location.href = response.url;
                    }
                })
        }
    }

    /* Stock Table Delete */



    function confirmDelete(assetsNumber) {
        if (confirm("Are you sure you want to delete this ID " + assetsNumber + " ?")) {
            // Evet'e basıldığında formu submit et
            document.getElementById('deleteForm_' + assetsNumber).submit();
        } else {
            // Hayır'a basıldığında işlem yapma
            return false;
        }
    }


</script>